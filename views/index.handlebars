<h1>EAT DA BURGER!</h1>
<img src = "/assets/img/burger.png"/>

<div class="container">
  <div class="col-sm-5 col-sm-offset-1">
    <h2>Burgers ready to be devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <div class="col-sm-5">
            <li>
              {{this.name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">DEVOUR!</button>
              </form>

              <form action="/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit">DELETE!</button>
              </form>
            </li>
          </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-5">
    <h2>Burgers which are devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <div class="col-sm-5">
            <li>
              {{this.name}}
              <form action="/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit">DELETE!</button>
              </form>
            </li>
          </div>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="footer">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
